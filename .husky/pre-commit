#!/usr/bin/env node
// Husky v10+ compatible hook. Runs lint-staged via a small Node wrapper to
// avoid relying on the legacy shell helper (which is deprecated and will
// fail under Husky v10).
const { spawnSync } = require('child_process');

const result = spawnSync('npx', ['--no', '--', 'lint-staged'], { stdio: 'inherit' });
process.exit(result.status);
