#!/usr/bin/env node
// Husky v10+ compatible pre-push hook.
// Runs the repository test script. Adjust if you prefer a lighter check.
const { spawnSync } = require('child_process');

// Run the root test script which itself runs workspace tests when present.
const result = spawnSync('npm', ['run', 'test'], { stdio: 'inherit' });
process.exit(result.status);
