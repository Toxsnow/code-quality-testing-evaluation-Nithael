#!/usr/bin/env node
// Husky v10+ compatible commit-msg hook.
// Invokes commitlint on the commit message file passed by Git.
const { spawnSync } = require('child_process');

const msgFile = process.argv[2];
if (!msgFile) {
  console.error('commit-msg hook: no message file provided');
  process.exit(1);
}

const result = spawnSync('npx', ['--no', '--', 'commitlint', '--edit', msgFile], { stdio: 'inherit' });
process.exit(result.status);
